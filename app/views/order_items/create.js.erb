<% if @order.errors.any? || @order_item.errors.any? %>
alert("Продукт недоступен для заказа или уже в корзине");
<% else %>
  $("#cart").html("<%=j render 'shared/sidebar_cart' %>");
	
	$('#module-cart-<%= @order_item.product_id %>').empty()
		.html('<%=j render 'products/order_comp_links/remove_order_index', o: @order_item.product_id %>');
	
	$("#show-product").load(document.URL + ' #show-product');
	
	infobox('<p>Добавлено <%= link_to " в корзину", order_path, class: "admin-edit-link" %></p>');
<% end %>