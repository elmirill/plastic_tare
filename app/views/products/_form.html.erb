<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Название" %><br>
    <%= f.text_field :name, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Описание" %><br>
    <%= f.text_area :description, class: "form-area-admin" %>
  </div>
  <div class="field">
    <%= f.label "Галлерея" %><br>
    <%= f.text_field :gallery, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Тип" %><br>
    <%= f.text_field :kind, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Применение" %><br>
    <%= f.text_field :application, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Размер (габариты)" %><br>
    <%= f.text_field :size, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Вместительность" %><br>
    <%= f.text_field :capacity, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Объем" %><br>
    <%= f.number_field :volume, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Параметры" %><br>
    <%= f.text_field :parameter, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Опции цвета" %><br>
    <%= f.text_field :color, class: "form-field-admin" %>
  </div>
  <div class="field product-var">
    <%= f.label "Цветной? (опция)" %><br>
    <%= f.check_box :color_var %>
  </div>
  <div class="field">
    <%= f.label "Цена цветной опции 1" %><br>
    <%= f.number_field :color_var_price_1, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Цена цветной опции 2" %><br>
    <%= f.number_field :color_var_price_2, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Цена цветной опции 3" %><br>
    <%= f.number_field :color_var_price_3, class: "form-field-admin" %>
  </div>
  <div class="field product-var">
    <%= f.label "Высший сорт? (опция)" %><br>
    <%= f.check_box :high_var %>
  </div>
  <div class="field">
    <%= f.label "Цена опции высшего класса 1" %><br>
    <%= f.number_field :high_var_price_1, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Цена опции высшего класса 2" %><br>
    <%= f.number_field :high_var_price_2, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Цена опции высшего класса 3" %><br>
    <%= f.number_field :high_var_price_3, class: "form-field-admin" %>
  </div>
  <div class="field product-var">
    <%= f.label "Спецпредложение? (опция)" %><br>
    <%= f.check_box :spec_var %>
  </div>
  <div class="field">
    <%= f.label "Цена опции спецпредложения 1" %><br>
    <%= f.number_field :spec_var_price_1, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Цена опции спецпредложения 2" %><br>
    <%= f.number_field :spec_var_price_2, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Цена опции спецпредложения 3" %><br>
    <%= f.number_field :spec_var_price_3, class: "form-field-admin" %>
  </div>
  <div class="actions">
    <%= link_to 'Назад', products_path, class: "admin-edit-link-back" %>
    <%= f.submit "Обновить", class: "form-button-admin" %>
  </div>
<% end %>
