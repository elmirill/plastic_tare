<% if product_in_cart?(product) %>
	<div class="module-cart-delete reveal">
<% else %>
	<div class="module-cart-delete hidden">
<% end %>
		<%= link_to order_item_by_product_id(product.id), data: { confirm: "Уверены?" }, method: :delete, remote: true do %>
			<i class="glyphicon glyphicon-ok"></i>
		<% end %>
	</div>

<% if product_in_cart?(product) %>
	<div class="module-cart-add hidden">
<% else %>
	<div class="module-cart-add reveal">
<% end %>
		<%= form_for @new_order_item, remote: true do |f| %>
			<%= f.hidden_field :product_id, value: product.id %>
			<%= f.hidden_field :color_quantity, value: 0 %>
			<%= f.hidden_field :high_quantity, value: 0 %>
			<%= f.hidden_field :spec_quantity, value: 0 %>
			<%= button_tag(type: 'submit', class: "admin-index-icons") do %>
				<i class="glyphicon glyphicon-shopping-cart"></i>
			<% end %>
		<% end %>
	</div>