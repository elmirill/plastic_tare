<div id="contact-form" class="clearfix">
<!--
	<input type="text" id="footer-form-name" class="form-field-footer" placeholder="Имя" />
	<input type="text" id="footer-form-contact" class="form-field-footer" placeholder="Телефон/электропочта" />
	<textarea id="footer-form-message" class="form-area-footer" placeholder="Сообщение"></textarea>
	<input type="submit" class="btn btn-primary btn-footer" value="Отправить сообщение" />
