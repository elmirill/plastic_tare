<h1>Список категорий</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Позиция</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.position %></td>
        <td><%= link_to 'Редактировать', edit_category_path(category) %></td>
        <td><%= link_to 'Удалить', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if admin_signed_in? %>
	<%= link_to 'Новая категория', new_category_path, class: "admin-edit-link-right" %>
<% end %>