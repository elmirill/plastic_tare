<% if @comparison.errors.any? || @comparison_item.errors.any? %>
	alert("Максимум три товара.");
<% else %>
  $('#comparison').html("<%=j render 'shared/sidebar_comparison' %>");

	$('#module-comparison-<%= @comparison_item.product_id %>').empty()
		.html('<%=j render 'products/order_comp_links/remove_comp_index', c: @comparison_item.product_id %>');
	
	$("#show-product").load(document.URL + ' #show-product');
	
	infobox('<p>Добавлено <%= link_to " к сравнению", comparison_path, class: "admin-edit-link" %></p>');
<% end %>