<h1>Войти как администратор</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "Электропочта" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-field-admin" %>
  </div>

  <div class="field">
    <%= f.label "Пароль" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-field-admin" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "Запомнить меня" %>
    </div>
  <% end %>
		
	<br>

  <div class="actions">
    <%= f.submit "Войти", class: "form-button-admin" %>
  </div>
<% end %>
