<h1>Забыли пароль?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "Электропочта" %><br />
		<%= f.email_field :email, autofocus: true, class: "form-field-admin" %>
  </div>

  <div class="actions">
		<%= f.submit "Отправить инструкцию по смене пароля", class: "btn btn-primary" %>
  </div>
<% end %>
