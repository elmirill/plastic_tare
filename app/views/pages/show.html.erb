<% @page.meta_title.present? ? meta_title(@page.meta_title) : meta_title(@page.name) %>
<% @page.meta_description.present? ? meta_description(@page.meta_description) : meta_description %>
<h1><%= @page.name %></h1>

<%= @page.content.html_safe %>

<% if admin_signed_in? %>
	<%= link_to 'Редактировать', edit_page_path(@page), class: "admin-edit-link-right" %>
<% end %>
