<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Полный адрес" %><br>
    <%= f.text_area :address_full, class: "form-area-admin" %>
  </div>
  <div class="field">
    <%= f.label "Сокращенный адрес" %><br>
    <%= f.text_area :address_short, class: "form-area-admin" %>
  </div>
  <div class="field">
    <%= f.label "Электропочта" %><br>
    <%= f.text_field :email, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Основной телефон" %><br>
    <%= f.text_field :phone_main, class: "form-field-admin" %>
  </div>
  <div class="field">
    <%= f.label "Остальные телефоны (разделитель — пробел с запятой)" %><br>
    <%= f.text_field :phone_other, class: "form-field-admin" %>
  </div>
<!--   <div class="field">
    <%= f.label "Код карты" %><br>
    <%= f.text_field :map %>
  </div> -->
  <div class="actions">
    <%= link_to 'Назад', contacts_path, class: "admin-edit-link-back" %>
    <%= f.submit "Обновить", class: "form-button-admin" %>
  </div>
<% end %>
